<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.notifications.NotificationsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/stylecolor3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/headImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_circle"
                app:srcCompat="@drawable/people">
            </ImageView>
            <TextView
                android:id="@+id/name"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                android:text="未登入"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/code"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="120dp"
                android:text="未登入"
                android:textColor="#FFFFFF"
                android:textSize="12dp">
            </TextView>
            <TextView
                android:id="@+id/level"
                android:background="@drawable/shape2"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="120dp"
                android:text="LV.0"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:textStyle="bold"
                android:gravity="center">
            </TextView>
            <TextView
                android:id="@+id/sign"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_marginTop="95dp"
                android:layout_marginLeft="40dp"
                android:text="....."
                android:textColor="#FFFFFF"
                android:textSize="12dp">
            </TextView>
            <ImageView
                android:id="@+id/upload"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_only"
                app:srcCompat="@drawable/ic_baseline_add_a_photo" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="140dp">
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/fouse"
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp"/>
                <TextView
                    android:text="关注"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:gravity="center"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="70dp">
                <TextView
                    android:id="@+id/fans"
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp"/>
                <TextView
                    android:text="粉丝"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:gravity="center"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="120dp">
                <TextView
                    android:id="@+id/likes"
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp"/>
                <TextView
                    android:text="点赞收藏"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:gravity="center"/>
            </RelativeLayout>


            <Button
                android:id="@+id/reflash"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_only"
                android:gravity="center"
                android:text="刷新"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />

            <Button
                android:id="@+id/setting"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_only"
                android:gravity="center"
                android:text="设置"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp"
        android:background="@drawable/shape"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="120px"
                android:layout_gravity="center_horizontal|top"
                android:background="@color/colorPrimary">
                <Button
                    android:id="@+id/buttom1"
                    android:layout_width="60dp"
                    android:layout_height="120px"
                    android:text="笔记"
                    android:background="#FFFFFF">
                </Button>
                <Button
                    android:id="@+id/buttom2"
                    android:layout_width="60dp"
                    android:layout_height="120px"
                    android:text="收藏"
                    android:background="#FFFFFF">
                </Button>
                <Button
                    android:id="@+id/buttom3"
                    android:layout_width="60dp"
                    android:layout_height="120px"
                    android:text="赞过"
                    android:background="#FFFFFF">
                </Button>
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler3"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>