<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.notifications.UploadActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/img_001">

        <ImageView
            android:id="@+id/uploadImg"
            android:layout_marginTop="30dp"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal" />
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">
            <Button
                android:id="@+id/photoUpload"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/border_only"
                android:text="拍照"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/albumUpload"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/border_only"
                android:text="相册"
                android:textColor="#FFFFFF"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border_only">
            <EditText
                android:id="@+id/inputTiTle"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#FFFFFF"
                android:hint="请输入标题..."
                android:textColorHint="#FFFFFF"
                android:maxLines="2"
                android:background="@drawable/blank"></EditText>
            <EditText
                android:id="@+id/inPutInfo"
                android:layout_width="200dp"
                android:layout_height="160dp"
                android:layout_marginLeft="20dp"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:hint="请输入内容..."
                android:textColorHint="#FFFFFF"
                android:maxLines="10"
                android:background="@drawable/blank"
                android:gravity="top"
                android:layout_marginTop="60dp"></EditText>
        </RelativeLayout>

        <Button
            android:id="@+id/upload"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_only"
            android:text="保存"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>