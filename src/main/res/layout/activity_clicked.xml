<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClickedActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/stylecolor"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/SceneryImg"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

        </ImageView>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="260dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_only">
            <TextView
                android:id="@+id/SceneryName"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="16dp">
            </TextView>
            <TextView
                android:id="@+id/SceneryInfo"
                android:layout_width="280dp"
                android:layout_height="200dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="10dp"
                android:textSize="14dp">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border_only">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="点赞"
                android:gravity="center" android:textColor="#FFFFFF"
                android:layout_marginLeft="30dp">
            </TextView>
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/ifLike"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="80dp"></ImageView>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="180dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="收藏"
                android:gravity="center"
                android:textColor="#FFFFFF">
            </TextView>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="230dp"
                android:id="@+id/ifStar"
                android:layout_width="40dp"
                android:layout_height="40dp"></ImageView>
        </RelativeLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>